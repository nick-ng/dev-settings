// Settings
// Place your settings in this file to overwrite the default settings
{
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  "editor.renderIndentGuides": true,
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.openPositioning": "last",
  "css.validate": false,
  "explorer.enableDragAndDrop": false,
  "editor.minimap.enabled": false,
  "editor.minimap.maxColumn": 20,
  "editor.minimap.renderCharacters": false,
  "window.title": "${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty} ${activeEditorMedium}${separator}${rootName} ${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}",
  "explorer.openEditors.visible": 6,
  "editor.renderWhitespace": "boundary",
  // "editor.fontFamily": "'Comic Sans MS', Arial, Helvetica",
  "editor.fontFamily": "'Fira Code'",
  "editor.fontLigatures": true,
  "editor.cursorStyle": "block",
  "workbench.iconTheme": "vs-nick",
  "workbench.editor.showIcons": true,
  "window.zoomLevel": -2,
  "git.enabled": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "off",
  "emmet.showExpandedAbbreviation": "never",
  "emmet.showAbbreviationSuggestions": false,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 90,
  "editor.rulers": [
    80,
    90,
    91
  ],
  "window.openFilesInNewWindow": "on",
  "window.newWindowDimensions": "inherit",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.enablePreview": false,
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": false,
    "suppressWelcomeNotice": true
  },
  "gitlens.keymap": "alternate",
  "gitlens.historyExplorer.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "files.autoSave": "off"
  // "emeraldwalk.runonsave": {
  //   "commands": [
  //     {
  //       "match": ".*",
  //       "cmd": "gitcommitifnotmasterm \"Saved ${file}\""
  //     }
  //   ]
  // }
}



// keybindings.json
// Place your key bindings in this file to overwrite the defaults
[
  { "key": "cmd+ctrl+alt+5", "command": "workbench.action.debug.continue", "when": "inDebugMode" },
  { "key": "alt+cmd+i", "command": "cursorUp" },
  { "key": "alt+cmd+shift+i", "command": "cursorUpSelect" },
  { "key": "alt+cmd+k", "command": "cursorDown" },
  { "key": "alt+cmd+shift+k", "command": "cursorDownSelect" },
  { "key": "alt+cmd+j", "command": "cursorLeft" },
  { "key": "alt+cmd+shift+j", "command": "cursorLeftSelect" },
  { "key": "alt+cmd+l", "command": "cursorRight" },
  { "key": "alt+cmd+shift+l", "command": "cursorRightSelect" },
  { "key": "alt+cmd+u", "command": "cursorHome" },
  { "key": "alt+cmd+shift+u", "command": "cursorHomeSelect" },
  { "key": "alt+cmd+o", "command": "cursorEnd" },
  { "key": "alt+cmd+shift+o", "command": "cursorEndSelect" },
  { "key": "alt+cmd+8", "command": "cursorPageUp" },
  { "key": "alt+cmd+,", "command": "cursorPageDown" },
  { "key": "alt+cmd+m", "command" : "cursorWordStartLeft" },
  { "key": "alt+cmd+shift+m", "command" : "cursorWordStartLeftSelect" },
  { "key": "alt+cmd+.", "command" : "cursorWordEndRight" },
  { "key": "alt+cmd+shift+.", "command" : "cursorWordEndRightSelect" },
  { "key": "cmd+shift+u", "command": "editor.action.transformToUppercase" },
  { "key": "cmd+shift+l", "command": "editor.action.transformToLowercase" },
  { "key": "alt+ctrl+i", "command": "cursorUp" },
  { "key": "alt+ctrl+shift+i", "command": "cursorUpSelect" },
  { "key": "alt+ctrl+k", "command": "cursorDown" },
  { "key": "alt+ctrl+shift+k", "command": "cursorDownSelect" },
  { "key": "alt+ctrl+j", "command": "cursorLeft" },
  { "key": "alt+ctrl+shift+j", "command": "cursorLeftSelect" },
  { "key": "alt+ctrl+l", "command": "cursorRight" },
  { "key": "alt+ctrl+shift+l", "command": "cursorRightSelect" },
  { "key": "alt+ctrl+u", "command": "cursorHome" },
  { "key": "alt+ctrl+shift+u", "command": "cursorHomeSelect" },
  { "key": "alt+ctrl+o", "command": "cursorEnd" },
  { "key": "alt+ctrl+shift+o", "command": "cursorEndSelect" },
  { "key": "alt+ctrl+8", "command": "cursorPageUp" },
  { "key": "alt+ctrl+,", "command": "cursorPageDown" },
  { "key": "alt+ctrl+m", "command" : "cursorWordStartLeft" },
  { "key": "alt+ctrl+shift+m", "command" : "cursorWordStartLeftSelect" },
  { "key": "alt+ctrl+.", "command" : "cursorWordEndRight" },
  { "key": "alt+ctrl+shift+.", "command" : "cursorWordEndRightSelect" },
  { "key": "ctrl+u", "command": "editor.action.transformToUppercase" },
  { "key": "ctrl+l", "command": "editor.action.transformToLowercase" },
  { "key": "cmd+u", "command": "editor.action.transformToUppercase" },
  { "key": "cmd+l", "command": "editor.action.transformToLowercase" },
  { "key": "ctrl+alt+f", "command": "eslint.executeAutofix" },
  { "key": "cmd+alt+f", "command": "eslint.executeAutofix" }
]
